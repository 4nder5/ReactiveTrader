<UserControl x:Class="Adaptive.ReactiveTrader.Client.UI.SpotTiles.SpotTileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:spotTiles="clr-namespace:Adaptive.ReactiveTrader.Client.UI.SpotTiles"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Control.Resources>
        <DataTemplate x:Key="PriceDataTemplate" DataType="spotTiles:IOneWayPriceViewModel">
            <Button Width="100" Height="100" 
                    Command="{Binding ExecuteCommand}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding BigFigures, Mode=OneWay}" VerticalAlignment="Bottom" Style="{StaticResource ContentHeading1Style}" />
                    <TextBlock Text="{Binding Pips, Mode=OneWay}" VerticalAlignment="Bottom" Foreground="Black" Style="{StaticResource ContentHeading1Style}"  />
                    <TextBlock Text="{Binding TenthOfPip, Mode=OneWay}" VerticalAlignment="Bottom" Style="{StaticResource ContentHeading1Style}"  />
                </StackPanel>
            </Button>
        </DataTemplate>
    </Control.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" 
                   Text="{Binding Symbol, Mode=OneWay}"
                   TextAlignment="Center"
                   HorizontalAlignment="Stretch"
                   Style="{StaticResource ContentHeading1Style}"/>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="120" />
            </Grid.ColumnDefinitions>

            <ContentControl Grid.Column="0" 
                            Margin="0,0,10,10"
                            Content="{Binding Bid}" ContentTemplate="{StaticResource PriceDataTemplate}"/>
            
            <TextBlock Text="{Binding Spread, Mode=OneWay}" Grid.Column="1" />

            <ContentControl Grid.Column="2" 
                            Margin="10,0,0,10"
                            Content="{Binding Ask}" ContentTemplate="{StaticResource PriceDataTemplate}"/>
            
        </Grid>
        
        <TextBox Grid.Row="2" Text="{Binding Notional}" TextAlignment="Right" />
    </Grid>
</UserControl>
